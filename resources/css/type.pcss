@import url('https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap');

body {
    font-family: "Urbanist", sans-serif;
    font-optical-sizing: auto;
    font-weight: 500;
    font-style: normal;
}

h1, h2, h3 {
    margin: 0;
    font-weight: 900;
    line-height: 1em;
}

p {
    margin: 0;
}

a {
    color: var(--color-brand);
}

p.error {
    color: var(--color-error);
}
